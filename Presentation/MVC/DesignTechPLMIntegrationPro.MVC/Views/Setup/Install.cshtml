										<thead>
											<tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
												<th>Tablo Adı</th>
												<th>Durum</th>
											</tr>
										</thead>
										<tbody>
											@foreach (var table in Model.Where(x => x.Type == "Table"))
											{
												<tr class="fw-semibold text-gray-600">
